{
	"name": "mikrouli",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"engines": {
		"node": "^22",
		"bun": "^1"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/pvds/mikrouli"
	},
	"scripts": {
		"prepare": "lefthook install",
		"start": "vite dev --open & bun run watch",
		"start:prod": "vite build && vite preview --open",
		"dev": "vite dev",
		"build": "vite build",
		"build:netlify": "DEPLOY_TARGET=netlify vite build",
		"preview": "vite preview",
		"preview:netlify": "DEPLOY_TARGET=netlify vite preview",
		"watch": "bun run check:svelte:watch",
		"check": "bun run check:format & bun run check:svelte",
		"check:ci": "biome ci & bun run check:svelte:ci",
		"check:all": "bun run check & bun run build -l warn",
		"check:format": "biome check",
		"check:svelte": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:svelte:ci": "bun run check:svelte --output machine",
		"check:svelte:watch": "bun run check:svelte --watch",
		"write": "biome check --write",
		"util:favicons": "bunx realfavicon generate src/lib/images/icon.svg favicons.json .favicons.json static",
		"util:content": "bun run scripts/content/fetch.js",
		"util:clean": "bun run scripts/util/clean.js",
		"util:lighthouse": "bun run scripts/test/lighthouse.js",
		"util:a11y": "bun run scripts/test/axe.js",
		"util:a11y:ci": "bun run util:a11y --minimal"
	},
	"devDependencies": {
		"@axe-core/playwright": "^4.10.1",
		"@biomejs/biome": "1.9.4",
		"@evilmartians/lefthook": "^1.10.5",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.15.2",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.0.0-beta.9",
		"contentful": "^11.4.3",
		"marked": "^15.0.6",
		"marked-gfm-heading-id": "^4.1.1",
		"playwright": "^1.49.1",
		"playwright-lighthouse": "^4.0.0",
		"svelte": "^5.18.0",
		"svelte-check": "^4.1.4",
		"tailwindcss": "^4.0.0-beta.9",
		"typescript": "^5.7.3",
		"vite": "^6.0.7"
	},
	"trustedDependencies": ["@biomejs/biome", "@evilmartians/lefthook", "@sveltejs/kit", "esbuild"],
	"prettier": {
		"proseWrap": "always"
	}
}
