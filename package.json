{
	"name": "mikrouli",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"engines": {
		"node": "^22",
		"bun": "^1"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/pvds/mikrouli"
	},
	"scripts": {
		"prepare": "lefthook install",
		"start": "vite dev --open & bun run watch",
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"watch": "bun run check:svelte:watch",
		"check": "bun run check:format & bun run check:svelte",
		"check:ci": "biome ci & bun run check:svelte:ci",
		"check:all": "bun run check & bun run build",
		"check:format": "biome check",
		"check:svelte": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:svelte:ci": "bun run check:svelte --output machine",
		"check:svelte:watch": "bun run check:svelte --watch",
		"write": "biome check --write",
		"util:favicons": "bunx realfavicon generate src/lib/images/icon.svg favicons.json .favicons.json static",
		"util:content": "bun run scripts/fetchContent.js",
		"util:clean": "bun run scripts/clean.js"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@evilmartians/lefthook": "^1.10.1",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.15.2",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/typography": "^0.5.16",
		"@tailwindcss/vite": "^4.0.0-beta.8",
		"contentful": "^11.4.1",
		"marked": "^15.0.6",
		"svelte": "^5.17.1",
		"svelte-check": "^4.1.3",
		"tailwindcss": "^4.0.0-beta.8",
		"typescript": "^5.7.3",
		"vite": "^6.0.7"
	},
	"trustedDependencies": ["@biomejs/biome", "@evilmartians/lefthook", "@sveltejs/kit", "esbuild"],
	"prettier": {
		"proseWrap": "always"
	}
}
